#!/usr/bin/env groovy
pipeline {
  agent {
    node{
      label 'Servidor109'
    }
  }
  environment {
      NAME_PROJECT = 'bulletins'
      BRANCH = 'develop'
      WEBHOOK = 'https://discord.com/api/webhooks/750364129340162110/gLwZFqrOTulHdOERp4Yv5BZvFkvmvI9JvnpxN1Ir4121hnV_XmUOz4WB6ZfkBbiuFYgs'
  }
  options {
    gitlabBuilds(builds: ['Delete Folder TEMP', 'Clone Project', 'Make Project','Make Permission','Install Deps','Create Version'])
  }
  stages {
    stage('Delete Folder TEMP') {
      steps {
        slackSend color: "good", message: "hum :yawning_face: pois é Guinho .... de novo né?"
        slackSend color: "warning", message: "deixe eu limpar a casa..... ${NAME_PROJECT} - ${BRANCH} Deletando pasta temporaria"
        discordSend link: env.BUILD_URL, description: "hum :yawning_face: pois é .... de novo né?", webhookURL: WEBHOOK, unstable: true
        discordSend link: env.BUILD_URL, description: "deixe eu limpar a casa..... ${NAME_PROJECT} - ${BRANCH} Deletando pasta temporaria", webhookURL: WEBHOOK, unstable: true, successful: true
        updateGitlabCommitStatus name: 'Delete Folder TEMP', state: 'running'
        sh 'cd /deploys && rm -rf $NAME_PROJECT'
        updateGitlabCommitStatus name: 'Delete Folder TEMP', state: 'success'
      }
      post{
        failure {
          slackSend color: "danger", message: "${NAME_PROJECT} - ${env.JOB_NAME} #${env.BUILD_NUMBER} :rage: Erro ao tentar deletar a pasta"
					slackSend color: "danger", message: "Deu merda .... Corrija sua cagada :shit:"
					discordSend link: env.BUILD_URL, description: "${NAME_PROJECT} - ${env.JOB_NAME} #${env.BUILD_NUMBER} :rage: Erro ao tentar deletar a pasta", webhookURL: WEBHOOK, result: 'WARNING'
					discordSend link: env.BUILD_URL, description: "Deu merda .... Corrija sua cagada :shit:", webhookURL: WEBHOOK, result: 'WARNING'
          updateGitlabCommitStatus name: 'Delete Folder TEMP', state: 'failed'
        }
      }
    }
    stage('Clone Project') {
      steps {
        updateGitlabCommitStatus name: 'Clone Project', state: 'running'
        slackSend color: "warning", message: "Me de logo va  ..... ${NAME_PROJECT} - ${BRANCH} Clonando o projeto"
        discordSend link: env.BUILD_URL, description: ":yawning_face: Me de logo va  ..... ${NAME_PROJECT} - ${BRANCH} Clonando o projeto", webhookURL: WEBHOOK, successful: true, result: 'UNSTABLE'
        checkout([
          $class: 'GitSCM', 
          branches: [[name: '*/develop']],
          doGenerateSubmoduleConfigurations: false,
          extensions: [[$class: 'RelativeTargetDirectory', relativeTargetDir: '/deploys/bulletins']], 
          submoduleCfg: [], 
          userRemoteConfigs: [[url: 'https://jenkins:cbmse108709.*@git.cbm.se.gov.br/cbm/bulletins']]
        ])
        updateGitlabCommitStatus name: 'Clone Project', state: 'success'
        sh 'ls -lah'
      }
      post {
        failure {
          slackSend color: "danger", message: "${NAME_PROJECT} - ${env.JOB_NAME} #${env.BUILD_NUMBER} Erro ao Clonar Projeto"
					slackSend color: "danger", message: "Deu merda .... Corrija sua :shit:"
					discordSend link: env.BUILD_URL, description: "${NAME_PROJECT} - ${env.JOB_NAME} #${env.BUILD_NUMBER} Erro ao Clonar Projeto", webhookURL: WEBHOOK
					discordSend link: env.BUILD_URL, description: "Deu merda ao Clonar Projeto .... Corrija sua :shit:", webhookURL: WEBHOOK
          updateGitlabCommitStatus name: 'Clone Project', state: 'failed'
        }
      }
    }
    stage('Make Project') {
      steps {
        dir('/deploys/bulletins') {
          slackSend color: "warning", message: "Vamos construir isso :face_with_rolling_eyes: ..... ${NAME_PROJECT} - ${BRANCH} Buildando projeto"
          discordSend link: env.BUILD_URL, description: "Vamos construir isso :face_with_rolling_eyes: ..... ${NAME_PROJECT} - ${BRANCH} Buildando projeto", webhookURL: WEBHOOK, result: 'UNSTABLE'
          updateGitlabCommitStatus name: 'Make Project', state: 'running'
          sh 'make deploy_hml'
          updateGitlabCommitStatus name: 'Make Project', state: 'success'
        }
      }
      post{
        failure {
          slackSend color: "danger", message: "${NAME_PROJECT} - ${env.JOB_NAME} #${env.BUILD_NUMBER} Erro ao Buildar Projeto"
					discordSend link: env.BUILD_URL, description: "Deu merda aqui em .... :shit: ", webhookURL: WEBHOOK
          updateGitlabCommitStatus name: 'Make Project', state: 'failed'
        }
      }
    }
    stage('Install Deps') {
      steps {
        slackSend color: "warning", message: "${NAME_PROJECT} - ${BRANCH} Instalando dependências"
        discordSend link: env.BUILD_URL, description: "${NAME_PROJECT} - ${BRANCH} Instalando dependências :sunglasses: ", webhookURL: WEBHOOK, result: 'UNSTABLE'
        updateGitlabCommitStatus name: 'Install Deps', state: 'running'
        sh 'cd /deploys/$NAME_PROJECT && make install-deps'
        updateGitlabCommitStatus name: 'Install Deps', state: 'success'
      }
      post{
        failure {
          slackSend color: "danger", message: "${NAME_PROJECT} - ${env.JOB_NAME} #${env.BUILD_NUMBER} Erro ao instalar dependências"
          updateGitlabCommitStatus name: 'Install Deps', state: 'failed'
        }
      }
    }
    stage('Make Permission') {
      steps {
        slackSend color: "warning", message: "Acho que não deveria fazer isso :sweat_smile: ..... ${NAME_PROJECT} - ${BRANCH} Dando permission projeto"
        discordSend link: env.BUILD_URL, description: "Acho que não deveria fazer isso :sweat_smile: ..... ${NAME_PROJECT} - ${BRANCH} Dando permission projeto", webhookURL: WEBHOOK, result: 'UNSTABLE'
        sh 'cd /deploys/$NAME_PROJECT && make permission'
        updateGitlabCommitStatus name: 'Make Permission', state: 'success'
      }
      post{
        failure {
          slackSend color: "danger", message: "${NAME_PROJECT} - ${env.JOB_NAME} #${env.BUILD_NUMBER} Erro ao dar permissão"
					slackSend color: "danger", message: "Deu merda .... Corrija sua :shit:"
					discordSend link: env.BUILD_URL, description: "Deu merda ao dar permissão.... Corrija sua :shit:", webhookURL: WEBHOOK
          updateGitlabCommitStatus name: 'Make Permission', state: 'failed'
        }
      }
    }
    stage('Create Version') {
      steps {
        updateGitlabCommitStatus name: 'Create Version', state: 'running'
        echo "Running ${env.BUILD_ID} on ${env.BUILD_NUMBER}"
        slackSend color: "good", message: "${currentBuild.fullDisplayName} - ${NAME_PROJECT} - ${BRANCH} Build ${env.BUILD_ID} implementado"
        updateGitlabCommitStatus name: 'Create Version', state: 'success'
        discordSend link: env.BUILD_URL, description: "Subiu doido :rocket: -> ${NAME_PROJECT} - ${BRANCH} ", webhookURL: WEBHOOK, result: 'SUCCESS'
      }
      post{
        failure {
          slackSend color: "danger", message: "${currentBuild.fullDisplayName} - ${env.JOB_NAME} #${env.BUILD_NUMBER} Erro ao Buildar Projeto"
          updateGitlabCommitStatus name: 'Create Version', state: 'failed'
        }
      }
    }
	}
}
